<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:elevation="@dimen/detail_pager_back_button_elevation">

            <ImageButton
                android:id="@+id/detail_pager_back_button"
                android:layout_width="?android:actionBarSize"
                android:layout_height="?android:actionBarSize"
                android:layout_marginEnd="@dimen/detail_pager_back_button_margin"
                android:layout_marginBottom="@dimen/detail_pager_back_button_margin"
                android:src="@drawable/ic_arrow_back"
                android:background="@drawable/back_button_ripple"/>

        </FrameLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/detail_view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/detail_pager_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="@dimen/detail_pager_fab_margin"
            android:layout_marginBottom="@dimen/detail_pager_fab_margin"
            android:elevation="@dimen/detail_pager_fab_elevation"
            app:pressedTranslationZ="@dimen/detail_pager_fab_translation_z"
            android:src="@drawable/ic_share"
            app:fabSize="normal"
            />
    </FrameLayout>
</layout>