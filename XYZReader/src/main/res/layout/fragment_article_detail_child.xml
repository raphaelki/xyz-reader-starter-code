<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.example.xyzreader.Constants" />

        <variable
            name="article"
            type="com.example.xyzreader.data.models.Article" />

        <variable
            name="glideRequestListener"
            type="com.example.xyzreader.ui.main.GlideRequestListener" />
    </data>

    <android.support.design.widget.CoordinatorLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/draw_insets_frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:transitionName="@{Constants.BACKGROUND_TRANSITION_NAME_PREXIX + article.id}">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/details_app_bar_layout_height"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:collapsedTitleTextAppearance="@style/CollapsedToolbarTextAppearance"
                app:expandedTitleTextAppearance="@style/ExpandedTextAppearance"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <ImageView
                    android:id="@+id/photo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    imageUrl="@{article.photoUrl}"
                    android:scaleType="centerCrop"
                    requestListener="@{glideRequestListener}"
                    android:adjustViewBounds="true"
                    android:src="@color/photo_placeholder"
                    android:transitionName="@{Constants.IMAGE_TRANSITION_NAME_PREFIX + article.id}"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="0.5"
                    tools:src="@drawable/scarletplague" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_gravity="top"
                    android:background="@drawable/photo_background_protection" />

            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

