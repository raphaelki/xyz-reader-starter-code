<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.example.xyzreader.Constants" />
        <variable
            name="article"
            type="com.example.xyzreader.data.models.Article" />

        <variable
            name="position"
            type="Integer" />

        <import type="com.example.xyzreader.ui.common.ArticleUtils" />

        <variable
            name="glideRequestListener"
            type="com.example.xyzreader.ui.main.GlideRequestListener" />
    </data>

    <android.support.v7.widget.CardView
        android:id="@+id/article_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mtrl_card_spacing"
        android:layout_marginRight="@dimen/mtrl_card_spacing"
        android:layout_marginTop="@dimen/mtrl_card_spacing"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:minHeight="200dp"
        android:transitionName="@{Constants.BACKGROUND_TRANSITION_NAME_PREXIX + article.id}"
        app:cardCornerRadius="4dp">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/item_contraint_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/thumbnail"
                imageUrl="@{article.thumbUrl}"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/scarletplague"
                android:transitionName="@{Constants.IMAGE_TRANSITION_NAME_PREFIX + article.id}"
                requestListener="@{glideRequestListener}"
                app:layout_constraintDimensionRatio="16:9"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView
                android:id="@+id/article_title"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:paddingEnd="16dp"
                android:paddingStart="16dp"
                android:paddingTop="16dp"
                android:text="@{article.title}"
                android:textColor="#000000"
                android:textSize="24sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/thumbnail"
                tools:text="Title" />

            <TextView
                android:id="@+id/article_subtitle"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:paddingBottom="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="@{ArticleUtils.parseArticleDate(article)}"
                android:textColor="#6000"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/article_title"
                tools:text="Subtilte" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</layout>